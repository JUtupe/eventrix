{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom",
      "es2016"
    ],
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
}
